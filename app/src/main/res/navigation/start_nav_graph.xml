<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.practiseapp.presentation.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/start_page">
        <action
            android:id="@+id/action_startFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_startFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.practiseapp.presentation.LoginFragment"
        android:label="Login"
        tools:layout="@layout/login_page"/>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.practiseapp.presentation.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/register_page"/>
</navigation>